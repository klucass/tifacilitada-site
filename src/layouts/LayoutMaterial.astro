---
import { Image } from "astro:assets";
import Layout from "./Layout.astro";
import logo from "../assets/logo.png";
---

<Layout>
  <div class="min-h-[calc(100vh-170px)]">
    <div class="lg:w-[1024px] mx-auto p-10 md:p-0">
      <a href="/">
        <Image src={logo} alt="TI Facilitada" width={200} class="p-0 m-0" />
      </a>
      <h2 class="text-4xl font-extrabold text-primary my-10">Material</h2>
      <slot />
    </div>
  </div>
</Layout>
